{{> header }}
<br>
<h1 style="font-family: monospace; font-size: 1.2em; text-align: center">----- Our Products -----</h1>
<div class="container" style="font-family: monospace">
    <br><br>{{# each products }}
    <div class="row">
      <div class="col-md-12">
        <div class="thumbnail">
          <div class="caption">
            <h3>{{ this.title }}</h3>
              <p class="description">{{{this.description}}}</p>
              <div class="clearfix">
              <div class="price pull-left"><i class="fa fa-tag" aria-hidden="true"></i> {{ this.price }} CAD</div>
                <a href="/add/{{ this.id }}" class="btn btn-default pull-right" role="button"><i class="fa fa-shopping-cart" aria-hidden="true"></i> Add to cart</a>
              </div>
          </div>
        </div>
      </div>
    </div>
  {{/each}}
</div>